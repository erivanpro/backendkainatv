{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "start": "node dist/index.js",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "allowJs": true,
    "build": "tsc"
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
